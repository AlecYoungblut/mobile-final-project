<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tensorflow.lite.examples.styletransfer.MainActivity"
    android:id="@+id/coordinatorLayout">


    <ImageView
        android:id="@+id/original_imageview"
        android:layout_width="110dp"
        android:layout_height="99dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="17dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toStartOf="@+id/result_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_conversion_absoluteHeight="256dp"
        tools:layout_conversion_absoluteWidth="256dp" />

    <ImageView
        android:id="@+id/result_imageview"
        android:layout_width="232dp"
        android:layout_height="251dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/original_imageview"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_conversion_absoluteHeight="256dp"
        tools:layout_conversion_absoluteWidth="256dp" />

    <ImageView
        android:id="@+id/style_imageview"
        android:layout_width="112dp"
        android:layout_height="100dp"
        android:layout_marginTop="92dp"
        android:padding="4dp"
        android:src="@drawable/styles_square_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_imageview"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_conversion_absoluteHeight="256dp"
        tools:layout_conversion_absoluteWidth="256dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="153dp"
        android:layout_height="133dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="120dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="48dp" />

        <include
            layout="@layout/bottom_sheet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="193dp"
            tools:layout_conversion_absoluteWidth="377dp"
            tools:visibility="invisible" />

        <View
            android:id="@+id/dummy"
            android:layout_width="194dp"
            android:layout_height="195dp"
            app:layout_anchor="@id/capture_button"
            app:layout_anchorGravity="top|right|end"
            tools:layout_conversion_absoluteHeight="80dp"
            tools:layout_conversion_absoluteWidth="1dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_anchor="@id/dummy"
            app:layout_anchorGravity="top|end"
            app:srcCompat="@android:drawable/ic_popup_sync"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="56dp"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/choose_style_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/semi_transparent"
            android:gravity="center"
            android:text="@string/choose_a_style"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="256dp"
            tools:layout_conversion_absoluteWidth="256dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/capture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|end"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:layout_conversion_absoluteHeight="56dp"
            tools:layout_conversion_absoluteWidth="56dp"
            tools:visibility="invisible" />

        <FrameLayout
            android:id="@+id/view_finder"
            android:layout_width="81dp"
            android:layout_height="108dp"
            android:paddingTop="16dp"
            android:visibility="invisible"
            tools:layout_conversion_absoluteHeight="300dp"
            tools:layout_conversion_absoluteWidth="300dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>